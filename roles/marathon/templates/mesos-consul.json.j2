{
  "args": [
    "--zk=zk://zookeeper.service.{{ consul_dns_domain }}:2181/mesos",
    "--registry-ssl",
    "--registry-ssl-verify=false",
    "--registry-auth=admin:{{ nginx_admin_password }}",
    "--registry-token={{ consul_acl_master_token }}"
  ],
  "container": {
    "type": "DOCKER",
    "docker": {
      "network": "BRIDGE",
      "image": "{{ mesos_consul_image }}:{{ mesos_consul_image_tag }}"
    }
  },
  "id": "mesos-consul",
  "instances": 1,
  "cpus": 0.1,
  "mem": 128
}

