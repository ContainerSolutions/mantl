[Unit]
Description={{ collectd_service }}
After=docker.service
Requires=docker.service
Requires=dnsmasq.service

[Service]
Restart=on-failure
RestartSec=20
TimeoutStartSec=20m

ExecStartPre=-/usr/bin/docker rm {{ collectd_container_name }}
ExecStartPre=-/usr/bin/docker pull {{ collectd_image }}:{{ collectd_image_tag }}

ExecStart=/usr/bin/docker run \
    --rm \
    --name={{ collectd_container_name }} \
    --volume=/etc/collectd/:/etc/collectd \
    --volume=/:/rootfs:ro \
    --volume=/var/run:/var/run:rw \
    --volume=/sys:/sys:ro \
    --volume=/var/lib/docker/:/var/lib/docker:ro \
    {{ collectd_image }}:{{ collectd_image_tag }} \


ExecStop=/bin/bash -c " \
    /usr/bin/docker kill {{ collectd_container_name }} && \
    /usr/bin/docker rm {{ collectd_container_name }}"

[Install]
WantedBy=multi-user.target

