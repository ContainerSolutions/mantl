[Unit]
Description={{ cadvisor_service }}
After=docker.service
Requires=docker.service
Requires=dnsmasq.service

[Service]
Restart=on-failure
RestartSec=20
TimeoutStartSec=20m

ExecStartPre=-/usr/bin/docker rm {{ cadvisor_container_name }}
ExecStartPre=-/usr/bin/docker pull {{ cadvisor_image }}:{{ cadvisor_image_tag }}

ExecStart=/usr/bin/docker run \
    --rm \
    --name={{ cadvisor_container_name }} \
    {{ cadvisor_ports }} \
    --volume=/:/rootfs:ro \
    --volume=/var/run:/var/run:rw \
  	--volume=/sys:/sys:ro \
  	--volume=/var/lib/docker/:/var/lib/docker:ro \
    {{ cadvisor_image }}:{{ cadvisor_image_tag }} \
    

ExecStop=/bin/bash -c " \
    /usr/bin/docker kill {{ cadvisor_container_name }} && \
    /usr/bin/docker rm {{ cadvisor_container_name }}"

[Install]
WantedBy=multi-user.target
